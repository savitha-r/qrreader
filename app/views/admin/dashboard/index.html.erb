<h1> Admin Portal </h1>


		<%= link_to "Create User", new_admin_user_path, :method => :get %>

		
		<% current_user.get_members.each do |u| %>
			<h4><%= u.name %></h4>
			<%= link_to "Edit User", edit_admin_user_path(u), :method => :get %>
				
			<% if u.company %>
				<h4>Company: <%= u.company.name %></h4>
				<%= link_to "Edit User Company", edit_admin_user_company_path(u.company,u), :method => :get %>
			<% else %>
				<%= link_to "Create Company", new_admin_user_company_path(u), :method => :get %>
			<% end %>
		<% end %>

